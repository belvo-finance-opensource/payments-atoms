{
  "git": {
    "requireCleanWorkingDir": false,
    "requireBranch": "main",
    "commit": false,
    "requireCommits": false,
    "tag": true,
    "push": true,
    "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs"
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run type-check", "npm run test:ci", "npm run build"],
    "after:bump": "npx auto-changelog -p"
  },
  "npm": {
    "publish": true,
    "ignoreVersion": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      }
    }
  }
}
