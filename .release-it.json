{
  "git": {
    "requireCleanWorkingDir": false,
    "requireBranch": "main",
    "commit": false,
    "requireCommits": false,
    "tag": true,
    "push": true
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run type-check", "npm run test:ci", "npm run build"]
  },
  "npm": {
    "publish": true,
    "ignoreVersion": true
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      }
    }
  }
}
